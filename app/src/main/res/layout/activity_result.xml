<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/hills"
    tools:context="com.example.gualbertoscolari.hangman.Result">


    <TextView
        android:id="@+id/win_loose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="#030303"
        android:background="#72faf8f8"/>

    <TextView
        android:id="@+id/result_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/win_loose"
        android:layout_marginTop="15dp"
        android:textColor="#030303"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#72faf8f8"/>

    <TextView
        android:id="@+id/result_guesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_word"
        android:layout_marginTop="5dp"
        android:textColor="#030303"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#72faf8f8"/>

    <Button
        style="@style/button_style"
        android:id="@+id/result_back"
        android:layout_marginTop="170dp"
        android:text="@string/result_back"
        android:onClick="backToMain"/>

</RelativeLayout>
